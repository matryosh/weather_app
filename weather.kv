AddLocationForm:

<AddLocationForm>:
    orientation: "vertical"
    search_input: search_box
    search_results: search_results_list
    lat: latitude
    long: longitude

    BoxLayout:
        height: "40dp"
        size_hint_y: None
        TextInput:
            id: search_box
            size_hint_x: 50
        Button:
            text: "Search"
            size_hint_x: 25
            on_press: root.search_location()
        Button:
            text: "Current Location"
            size_hint_x: 25
            on_press: root.get_lat_get_long()

    BoxLayout:
        height: "30dp"
        size_hint_y: None
        Label:
            text: "Latitude"
            size_hint_x: 30
        TextInput:
            id: latitude
            size_hint_x: 20
        Label:
            text: "Longitude"
            size_hint_x: 30
        TextInput:
            id: longitude
            size_hint_x: 20
    ListView:
        id: search_results_list
        item_strings: []